<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="@dimen/spacing_small"
	android:foreground="?selectableItemBackground"
	app:actionType="OPEN">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingBottom="@dimen/spacing_small"
		android:paddingLeft="@dimen/spacing_normal"
		android:paddingRight="@dimen/spacing_normal"
		android:paddingTop="@dimen/spacing_small"
        android:gravity="center_vertical">

		<ImageView
			android:id="@+id/team_avatar"
			android:layout_width="@dimen/material_layout_avatar"
			android:layout_height="@dimen/material_layout_avatar"
			android:layout_marginRight="@dimen/spacing_normal"
			android:scaleType="centerCrop"
			tools:src="@drawable/ic_launcher"/>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			android:paddingRight="@dimen/spacing_small">

			<TextView
				android:id="@+id/team_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:gravity="center_vertical"
				android:maxLines="1"
				android:text="Team name"
				android:textAppearance="@style/TextAppearance.AppCompat.Large"
				tools:text="Riversoft"/>

			<TextView
				android:id="@+id/team_location"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:gravity="center_vertical"
				android:maxLines="1"
				android:text="Горішні Плавні"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"
				tools:text="Горішні Плавні"/>

		</LinearLayout>
	</LinearLayout>

</android.support.v7.widget.CardView>
